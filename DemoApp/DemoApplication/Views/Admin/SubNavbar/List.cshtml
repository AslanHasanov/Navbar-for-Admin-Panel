@using DemoApplication.ViewModels.Admin.SubNavbar
@model List<ListItemViewModel>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            <a asp-controller="subnavbar" asp-action="add" target="_blank" class="btn btn-secondary">Add new Subnavbar</a>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">SubNavbars</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Order</th>
                            <th>Navbar</th>
                          
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var subnavbar in Model)
                        {
                            <tr>
                                <td>@subnavbar.Title</td>

                                <td>@subnavbar.Order</td>
                                <td>@subnavbar.Navbar</td>
                               
                             
                            
                                <td class="text-end">
                                    <a asp-route="admin-subnavbar-update" asp-route-id="@subnavbar.Id"><i class="las la-pen text-secondary font-16"></i></a>
                                    <form method="POST" asp-route="admin-subnavbar-delete" asp-route-id="@subnavbar.Id" id="subnavbar-form-@subnavbar.Id"></form>
                                    <button type="submit" form="subnavbar-form-@subnavbar.Id">
                                        <i class="las la-trash-alt text-secondary font-16"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>