@model List<DemoApplication.Database.Models.Navbar>

@foreach (var navbar in Model)
{
    <li class="menu-item has-children">
        <a asp-route="@navbar.URL">
            @if (navbar.IsBold)
            {
                <b>@navbar.Title</b>
            }
            else
            {
                @navbar.Title
            }

            <i class="fas fa-chevron-down dropdown-arrow"></i>
        </a>
        <ul class="sub-menu">
            @foreach (var subnavbar in navbar.SubNavbars)
            {
                <li><a asp-route="@subnavbar.URL">@subnavbar.Title</a></li>
            }
        </ul>
    </li>
}